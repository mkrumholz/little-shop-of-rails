<% content_for :welcome do %>
  <%= render partial: './partials/welcome_nav' %>
<% end %>

<h1>Little Shop of Rails</h1>

<h3><%= link_to( 'Visit the Admin Dashboard', admin_index_path, method: :get, local: true) %><br><br></h3>

<h3><%= link_to 'Register as a Merchant', new_merchant_path %></h3><br/>

<h3><%= link_to 'I already have an account', login_path %></h3><br/>

<h3>Explore Merchants</h3>

<table>
  <th>Merchant ID:</th>
  <th>Merchant Name:</th>
  <% @merchants.each do |merchant| %>
    <tr><td><%= link_to( "Merchant ##{merchant.id}", merchant_dashboard_path(merchant.id), method: :get, local: true) %></td>
        <td><%= merchant.name %></td></tr>
  <% end %>
</table>
